<!-- Definición del elemento raíz para una lista de animaciones. Esta se utiliza para animaciones de frame por frame. -->
<animation-list xmlns:android="http://schemas.android.com/apk/res/android"
    android:oneshot="false">  <!-- 'oneshot="false"' indica que la animación se repetirá indefinidamente. -->

    <!-- Cada 'item' representa un frame de la animación. -->
    <item android:drawable="@drawable/anim001" android:duration="200" /> <!-- Primer frame, mostrado por 200 milisegundos. -->
    <item android:drawable="@drawable/anim002" android:duration="125" /> <!-- Segundo frame, mostrado por 125 milisegundos. -->
    <item android:drawable="@drawable/anim003" android:duration="150" /> <!-- Tercer frame, mostrado por 150 milisegundos. -->
    <item android:drawable="@drawable/anim004" android:duration="175" /> <!-- Cuarto frame, mostrado por 175 milisegundos. -->
    <item android:drawable="@drawable/anim005" android:duration="200" /> <!-- Quinto frame, mostrado por 200 milisegundos. -->
    <item android:drawable="@drawable/anim006" android:duration="125" /> <!-- Sexto frame, mostrado por 125 milisegundos. -->
    <item android:drawable="@drawable/anim007" android:duration="150" /> <!-- Septimo frame, mostrado por 150 milisegundos. -->
    <item android:drawable="@drawable/anim008" android:duration="175" /> <!-- Octavo frame, mostrado por 175 milisegundos. -->
</animation-list>
